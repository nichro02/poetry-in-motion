<h1>Write a Post</h1>
<section>
    <form action="/post" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" placeholder="Write Your Title Here" required>
        </div>

        <img id="image" src=<%=imageUrl%>>

        <div>
            <label for="content">Content</label>
            <textarea type="text" id="content" name="content" placeholder="Write your entry here" required></textarea>
        </div>
        
        <input type="submit" value="Save">
    </form>
</section>

<a href="/">&larr; Back to Home</a>

