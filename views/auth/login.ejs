<h2>Please log in</h2>

<form method="POST" action="/auth/login">
    <label class="auth" for="auth-email">Email</label>
    <input class="auth" type="email" id="auth-email" name="email">

    <label class="auth" for="auth-password">Password</label>
    <input class="auth" type="password" id="auth-password" name="password">

    <input class="auth" type="submit" value="Log In">
</form>